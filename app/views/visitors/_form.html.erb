<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@visitor) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <% if @visitor.errors.include?(:name) %>
        <div id="field_error">Looks like you forgot to enter your name!</div>
      <% end %>

      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control' %>
      <% if @visitor.errors.include?(:email) %>
        <div id="field_error">Are you sure that's a valid email?</div>
      <% end %>

      <%= f.label :comment %>
      <%= f.text_field :comment, class: 'form-control' %>

      <%= f.submit "Sign the guestbook", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
